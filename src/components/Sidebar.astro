---
const { selectedItem } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<aside
  data-animation="default"
  data-collapse="medium"
  data-duration="400"
  data-easing="ease"
  data-easing2="ease"
  role="banner"
  class="sidebar w-nav"
>
  <div class="nav-content">
    <a href={base} class="w-nav-brand" aria-label="home">
      <div class="niv-data">
        <img
          src={`${base}assets/ava.jpg`}
          loading="eager"
          alt="Profile picture"
          class="niv-image"
        />
        <div>
          <div class="label-white">Luka Puhlyak</div>
          <div class="label-gray">Engineer ???</div>
        </div>
      </div>
    </a>

    <nav role="navigation" class="w-nav-menu">
      
      <a
        href={base}
        class={`nav-link-container w-inline-block ${
          selectedItem === 'home' ? 'w--current' : ''
        }`}
      >
        <img
          src={`${base}assets/home.svg`}
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Home</div>
      </a>

      <a
        href={`${base}software-development`}
        class={`nav-link-container w-inline-block ${
          selectedItem === 'software-development' ? 'w--current' : ''
        }`}
      >
        <img
          src={`${base}assets/code.svg`}
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Software development</div>
      </a>

      <a
        href={`${base}devops`}
        class={`nav-link-container w-inline-block ${
          selectedItem === 'devops' ? 'w--current' : ''
        }`}
      >
        <img
          src={`${base}assets/dns.svg`}
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>DevOps</div>
      </a>

      <a
        href={`${base}personal-projects`}
        class={`nav-link-container w-inline-block ${
          selectedItem === 'personal-projects' ? 'w--current' : ''
        }`}
      >
        <img
          src={`${base}assets/favorite.svg`}
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Personal projects</div>
      </a>

      <a
        href={`${base}info`}
        class={`nav-link-container w-inline-block ${
          selectedItem === 'info' ? 'w--current' : ''
        }`}
      >
        <img
          src={`${base}assets/info.svg`}
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>About me</div>
      </a>

    </nav>

    <div
      class="navbar-icon-button w-nav-button"
      aria-label="menu"
      role="button"
      tabindex="0"
    >
      <img
        src={`${base}assets/menu.svg`}
        loading="eager"
        alt=""
        class="navbar-icon"
      />
    </div>
  </div>

  <script>
    import { setupNav } from '../scripts/nav.js';
    
    let cleanup;
    document.addEventListener('astro:page-load', () => {
      if (cleanup) cleanup();
      cleanup = setupNav();
    });

    document.addEventListener('astro:before-swap', () => {
      if (cleanup) cleanup();
    });
  </script>
</aside>
